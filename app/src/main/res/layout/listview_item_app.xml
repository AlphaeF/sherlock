<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fdfff7"

    >

    <android.support.v7.widget.CardView
        android:id="@+id/ShortcutItemContain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="3dp"
        app:cardBackgroundColor="#ffffff"
        app:cardElevation="2dp"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/listviewitemappImageView"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="10dp" />
            <android.support.v7.widget.AppCompatCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/AppWhiteViewCanOpenCB"
                android:layout_margin="5dp" />

            <android.support.v7.widget.AppCompatCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/AppWhiteViewCanOpenCB"
                android:id="@+id/AppWhiteViewCanRunCB"
                android:layout_centerVertical="true"
                />



            <TextView
                android:id="@+id/listviewitemappTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@id/AppWhiteViewCanRunCB"
                android:layout_toRightOf="@id/listviewitemappImageView"
                android:singleLine="true"
                android:textColor="#2f0b12"
                android:textSize="18sp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>